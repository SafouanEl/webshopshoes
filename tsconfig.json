{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2019" /* Modern JS output */,
    "module": "commonjs" /* Node.js compatible modules */,
    "resolveJsonModule": true /* Allow importing JSON files */,
    "esModuleInterop": true /* Easier CommonJS interop */,
    "forceConsistentCasingInFileNames": true /* Casing consistency */,
    "strict": true /* Strict type checks */,
    "skipLibCheck": true /* Skip .d.ts type checks */,

    /* Project structure */
    "rootDir": "./" /* Root folder for TS files */,
    "outDir": "./dist" /* Output folder for compiled JS */,

    /* Debugging */
    "sourceMap": true /* Generate .map files for debugging */
  },
  "include": ["index.ts", "interface.ts", "api/**/*.ts", "index.test.ts"],
  "exclude": ["node_modules", "dist"]
}
